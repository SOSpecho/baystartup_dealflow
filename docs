<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investor Login</title>
</head>
<body>
    <div style="text-align: center; margin-top: 20%;">
        <h1>BayStartUP Investor Login</h1>
        <form id="loginForm">
            <input type="email" id="email" placeholder="E-Mail-Adresse eingeben" required>
            <button type="submit">Einloggen</button>
        </form>
        <p id="error" style="color: red; display: none;">Ung√ºltige E-Mail-Adresse oder kein Zugriff.</p>
    </div>
    <script>
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('email').value.trim();
            const error = document.getElementById('error');
            error.style.display = 'none';

            const response = await fetch('https://api.airtable.com/v0/YOUR_BASE_ID/Investoren', {
                method: 'POST',
                headers: {
                    'Authorization': 'Bearer YOUR_API_KEY',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    "fields": { "E-Mail-Adresse": email }
                })
            });

            const result = await response.json();

            if (response.ok && result.records.length > 0) {
                const zugelassen = result.records[0].fields['Zugelassen'];
                if (zugelassen) {
                    window.location.href = 'SHARED_VIEW_LINK';
                } else {
                    error.style.display = 'block';
                }
            } else {
                error.style.display = 'block';
            }
        });
    </script>
</body>
</html>
